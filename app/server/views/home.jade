
// preset form values if we receive a userdata object //
- label = typeof(user) != 'undefined' ? ('Welcome ' + user) : 'Welcome guest, login?'
- icon = userid ? '/css/ui/person_tie.png' : '/css/ui/External.png'
- userid = user
- conversationid = conversationid
- namelink = typeof(user) != 'undefined' ? ('/settings') : '/login'


doctype html
html
	head
		meta(charset='UTF-8')
		meta(name='conversationid',content="#{conversationid}")
		title ask the wosap
		meta(name='viewport', content='width=device-width, initial-scale=1')
		script(src='socket.io/socket.io.js')
		link(rel='stylesheet', href='/css/index_style.css')
	body(style="line-height:1em; -webkit-app-region: drag;")
		img(title="User status", style='width:18px;height:18px',src="/css/ui/External.png")
		div#header-wrap(style='-webkit-app-region: drag; text-size:20')
			ul.nav(style=)
				li.nav.dropdown(style='float:left!important')
					a.dropbtn(href='javascript:void(0)', style="margin:5px 10px;")
						img.dropbtn(title="menu", style='width:18px;height:18px', onclick='doExpand()', src="/css/ui/person_tie.png")
					div#aDropDown.dropdown-content
						if userid
							a(href="#{label}") settings
							a(href="/logoff") logout
						else
							a(href="/signup") register
							a(href="/login") login
						a(href="/about") about
						a(href="/termsofuse") terms of use
						a(href="/whatsnew") what's new
						a(href="/legal_de") impressum (german)
						a(href="/legal_en") legal disclosure (english)
				li.nav.center(style="float:center!important;padding: 8px 10px") ask the wosap
				li.nav.right(style='float:right!important;margin-right:0px')
					a.plainlink(href='#{namelink}', style="padding:10px 10px")
						span(style="padding-top:8px;margin:0px;margin-right:30px;height:100%;vertical-align:middle;display:inline-block;") #{label}
						img(title="Use context menu for operations", style='padding-top:2px;vertical-align:bottom;width:18px;height:18px',src="/css/ui/person_tie.png")

		div(style='margin-top:20px', data-theme='a')
			ul.ui-listview(style='-webkit-app-region: no-drag', data-role='listview')
				li.request(data-icon="false")
					textarea#growme.ui-input-textX(rows='5', value='Acbdef') list all sample questions


	script(src='/js/index.js')
